

.joystick-area {
    position: absolute;
    top: 15%; left: 2%; right: 2%; bottom: 5%;
}

.joystick-base {
    position: absolute;
    background-color: rgba(0,0,0,0.5);
    border-radius: 50%;
}

.joystick-handle {
    position: absolute;
    background-color: rgba(0,0,0,0.8);
    border-radius: 50%;
}
